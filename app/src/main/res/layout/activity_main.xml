<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bops"
       />

    <TextView
    android:id="@+id/subtitle_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
    android:text="Music Player"
    />

    <ImageView
        android:id="@+id/music_note"
        android:src="@drawable/musicnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle_text"
        />

    <TextView
        android:id="@+id/recently_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_note"
        android:text="Recently Played" />

    <TextView
        android:id="@+id/listen_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recently_played"
        android:text="Listen Now" />

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:padding="25dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/listen_now"
        android:text="This is a Jazz Space by Midnight North" />

    <TextView
        android:id="@+id/track_name2"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_name"
        android:text="This Black Cat by Aaron Kenny" />

    <TextView
        android:id="@+id/track_name3"
        android:padding="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/track_name2"
        android:text="Canal 3 by Quincas Moreira" />


</RelativeLayout>